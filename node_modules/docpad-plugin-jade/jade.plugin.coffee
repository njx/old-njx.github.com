# Export Plugin
module.exports = (BasePlugin) ->
	# Define Plugin
	class JadePlugin extends BasePlugin
		# Plugin name
		name: 'jade'

		# Plugin priority
		priority: 725

		# Render some content
		render: (opts,next) ->
			# Prepare
			{inExtension,outExtension,templateData,file} = opts

			# Check our extension
			if inExtension is 'jade'
				# Requires
				jade = require('jade')

				# Render
				opts.content = jade.compile(opts.content, {
					filename: file.get('fullPath'), 
					pretty: true
				})(templateData)

			# Done, return back to DocPad
			return next()
